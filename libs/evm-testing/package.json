{
  "name": "@hicommonwealth/evm-testing",
  "private": "true",
  "type": "module",
  "version": "0.1.0",
  "description": "A private blockchain environment with a private chain and transaction/interface abstraction API",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "default": "./build/index.js",
      "devmode": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "clean": "rm -rf build && rm -rf coverage && find . -type f -name '*.tsbuildinfo' -exec rm {} +",
    "check-types": "tsc --noEmit",
    "test": "echo No tests to run",
    "start": "tsx src/server.ts",
    "lint": "NODE_OPTIONS=\"--max-old-space-size=4096\" eslint -c ../../.eslintrc.cjs './src/**/*.{ts,tsx}'",
    "lint-diff": "NODE_OPTIONS=\"--max-old-space-size=4096\" eslint -c ../../.eslintrc-diff.cjs './src/**/*.{ts,tsx}'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hicommonwealth/model": "workspace:*",
    "@viem/anvil": "^0.0.10",
    "axios": "^1.3.4",
    "cors": "^2.8.5",
    "express": "^4.20.0",
    "moment": "^2.23.0",
    "morgan": "^1.10.0",
    "pino-http": "^9.0.0",
    "web3": "^4.7.0",
    "web3-core": "^4.3.2",
    "web3-eth": "^4.6.0",
    "web3-utils": "^4.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/passport": "^1.0.16",
    "tsx": "^4.7.2",
    "zod": "^3.22.4"
  }
}
