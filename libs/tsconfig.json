{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "es2020",
    "target": "esnext",
    "baseUrl": ".",
    "rootDir": ".",
    "composite": true,
    "strict": true,

    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "paths": {
      "@hicommonwealth/*": ["./*/src"]
    }
  },
  "include": ["**/src", "**/test"],
  "exclude": ["**/node_modules", "**/build"]
}
