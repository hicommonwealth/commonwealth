{
  "name": "@hicommonwealth/model",
  "private": "true",
  "type": "module",
  "version": "0.1.0",
  "description": "Core Model - Server Side",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "default": "./build/index.js",
      "devmode": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "clean": "rm -rf build && find . -type f -name '*.tsbuildinfo' -exec rm {} +",
    "check-types": "tsc --noEmit",
    "test": "yarn build && NODE_OPTIONS='--import tsx/esm' NODE_ENV=test mocha 'test/**/*.spec.ts'"
  },
  "dependencies": {
    "@cosmjs/cosmwasm-stargate": "^0.31.3",
    "@cosmjs/encoding": "0.32.3",
    "@cosmjs/stargate": "^0.31.3",
    "@cosmjs/tendermint-rpc": "^0.31.3",
    "@hicommonwealth/chains": "workspace:*",
    "@hicommonwealth/core": "workspace:*",
    "@hicommonwealth/logging": "workspace:*",
    "@hicommonwealth/schemas": "workspace:*",
    "@hicommonwealth/shared": "workspace:*",
    "dotenv": "^16.0.3",
    "moment": "^2.23.0",
    "node-object-hash": "^3.0.0",
    "pg": "^8.11.3",
    "sequelize": "^6.32.1",
    "web3": "1.8.2",
    "web3-core": "1.8.2",
    "web3-eth-abi": "1.8.2",
    "web3-utils": "1.8.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@anatine/zod-mock": "^3.13.3",
    "@faker-js/faker": "^8.4.1",
    "mocha-steps": "^1.3.0",
    "tsx": "^4.7.2",
    "umzug": "^3.7.0"
  }
}
