{
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "*": ["./*", "shared/*", "client/scripts/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "traceResolution": false
  },
  "include": [
    "./client",
    "./client/scripts",
    "./shared/adapters",
    "./test",
    "./eth/types"
  ],
  "exclude": ["./node_modules"]
}
