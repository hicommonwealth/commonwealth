{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "traceResolution": true
  },
  "files": [
    "server/scripts/setupChainEventListeners.ts",
    "server/scripts/dbNode.ts",
  ],
  "include": [
    "server/models/*",
    "server/models/"
  ],
  "exclude": [
    "server/passport.ts",
    "server/router.ts",
    "server/webhookNotifier.ts",
    "server/socket",
    "server/migrations",
    "node_modules",
    "build",
    "dist",
  ]
}
