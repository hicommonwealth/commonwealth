{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "traceResolution": false
  },
  "files": [
    "server/scripts/chainEventsConsumer.ts",
    "server/scripts/dbNode.ts",
    "shared/logging.ts"
  ],
  "include": [
    "server/models/*",
    "server/models/"
  ],
  "exclude": [
    "server/passport.ts",
    "server/scripts/setupChainEventListeners.ts",
    "server/router.ts",
    "server/webhookNotifier.ts",
    "server/socket",
    "server/migrations",
    "node_modules",
    "build",
    "dist",
  ]
}
