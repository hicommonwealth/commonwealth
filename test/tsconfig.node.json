{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "*": ["../*", "../shared/*", "../client/scripts/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "traceResolution": true
  },
  "include": [
    "./client",
    "./client/scripts",
    "./shared/adapters",
    "./test"
  ],
  "exclude": [
    "./node_modules",
    "contracts/*"
  ]
}
