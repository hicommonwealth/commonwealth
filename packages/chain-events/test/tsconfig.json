{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "lib": ["es2019"],
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "typeRoots": [
      "../node_modules/@types",
      "../../../node_modules/@types"
    ],
    "baseUrl": ".",
    "types": ["mocha"]
  },
  "paths": {
    "common-common": ["../../../packages/common-common"],
    "common-common/*": ["../../../packages/common-common/*"]
  },
  "include": ["./**/*.spec.ts"]
}
