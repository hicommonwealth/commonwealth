{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "moduleResolution": "bundler",
    "module": "es2020",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "traceResolution": false
  },
  "exclude": ["**/build", "**/node_modules"]
}
