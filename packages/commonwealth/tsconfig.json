{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "jsx": "react",
    "sourceMap": true,
    "paths": {
      "@hicommonwealth/adapters": ["../../libs/adapters"],
      "@hicommonwealth/chains": ["../../libs/chains"],
      "@hicommonwealth/core": ["../../libs/core"],
      "@hicommonwealth/model": ["../../libs/model"],
      "@hicommonwealth/logging": ["../../libs/logging"],
      "@hicommonwealth/shared": ["../../libs/shared"],
      "*": ["./*", "./shared/*", "./client/scripts/*"]
    }
  },
  "include": [
    "client",
    "globals.d.ts",
    "server",
    "server.ts",
    "server-test.ts",
    "scripts",
    "shared",
    "test"
  ],
  "references": [
    { "path": "../../libs/adapters/tsconfig.build.json" },
    { "path": "../../libs/chains/tsconfig.build.json" },
    { "path": "../../libs/core/tsconfig.build.json" },
    { "path": "../../libs/model/tsconfig.build.json" },
    { "path": "../../libs/logging/tsconfig.build.json" },
    { "path": "../../libs/shared/tsconfig.build.json" }
  ]
}
