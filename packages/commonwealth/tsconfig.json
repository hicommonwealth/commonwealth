{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./build",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@hicommonwealth/*": ["../../libs/*/src"],
      "common-common": ["../../packages/common-common"],
      "common-common/*": ["../../packages/common-common/*"],
      "token-balance-cache": ["../../packages/token-balance-cache"],
      "token-balance-cache/*": ["../../packages/token-balance-cache/*"],
      "*": ["./*", "shared/*", "client/scripts/*"]
    }
  },
  "include": [
    "./client",
    "./client/scripts",
    "./shared",
    "./test",
    "./globals.d.ts",
    "./server",
    "./server.ts",
    "./scripts"
  ],
  "exclude": ["./node_modules"]
}
