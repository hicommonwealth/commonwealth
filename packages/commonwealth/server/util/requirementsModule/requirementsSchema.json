{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ContractSource": {
      "type": "object",
      "properties": {
        "source_type": {
          "type": "string",
          "enum": ["erc20", "erc721"]
        },
        "chain_id": {
          "type": "string"
        },
        "contract_address": {
          "type": "string"
        }
      },
      "required": ["source_type", "chain_id", "contract_address"]
    },
    "NativeSource": {
      "type": "object",
      "properties": {
        "source_type": {
          "type": "string",
          "enum": ["eth_native"]
        },
        "chain_id": {
          "type": "string"
        }
      },
      "required": ["source_type", "chain_id"]
    },
    "CosmosSource": {
      "type": "object",
      "properties": {
        "source_type": {
          "type": "string",
          "enum": ["cosmos_native"]
        },
        "chain_id": {
          "type": "string"
        },
        "token_symbol": {
          "type": "string"
        }
      },
      "required": ["source_type", "chain_id", "token_symbol"]
    },
    "ThresholdData": {
      "type": "object",
      "properties": {
        "threshold": {
          "type": "string"
        },
        "source": {
          "oneOf": [
            { "$ref": "#/definitions/ContractSource" },
            { "$ref": "#/definitions/NativeSource" },
            { "$ref": "#/definitions/CosmosSource" }
          ]
        }
      },
      "required": ["threshold", "source"]
    },
    "AllowlistData": {
      "type": "object",
      "properties": {
        "allow": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["allow"]
    }
  },
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "rule": {
        "type": "string",
        "enum": ["threshold", "allow"]
      },
      "data": {
        "oneOf": [
          { "$ref": "#/definitions/ThresholdData" },
          { "$ref": "#/definitions/AllowlistData" }
        ]
      }
    },
    "required": ["rule", "data"]
  }
}
