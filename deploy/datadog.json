{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "deploy/dockerfiles/datadog.dockerfile",
    "watchPatterns": [
      "deploy/dockerfiles/datadog.dockerfile",
      "deploy/datadog.json"
    ]
  },
  "deploy": {
    "restartPolicyType": "ALWAYS",
    "region": "us-east4-eqdc4a",
    "limitOverride": {
      "containers": {
        "cpu": 1,
        "memoryBytes": 1000000000
      }
    },
    "overlapSeconds": 60,
    "drainingSeconds": 30
  }
}
