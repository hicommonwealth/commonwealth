{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.railway"
  },
  "deploy": {
    "preDeployCommand": "npm run pre-deploy",
    "startCommand": "node --import=extensionless/register --enable-source-maps ./build/server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "region": "us-east4-eqdc4a",
    "limitOverride": {
      "containers": {
        "cpu": 1,
        "memoryBytes": 1000000000
      }
    },
    "healthcheckPath": "/api/health"
  },
  "environments": {
    "production": {
      "deploy": {
        "restartPolicyType": "ALWAYS",
        "restartPolicyMaxRetries": null,
        "multiRegionConfig": {
          "us-east4-eqdc4a": {
            "numReplicas": 1
          },
          "europe-west4-drams3a": {
            "numReplicas": 1
          }
        },
        "limitOverride": {
          "containers": {
            "cpu": 2,
            "memoryBytes": 5000000000
          }
        },
        "overlapSeconds": 30,
        "drainingSeconds": 30
      }
    }
  }
}
