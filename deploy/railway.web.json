{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.commonwealth_ephemeral"
  },
  "deploy": {
    "preDeployCommand": [
      "echo $PWD && node --import=extensionless/register --enable-source-maps build/server/scripts/releasePhaseEnvCheck.js && npx sequelize-cli db:migrate --config server/sequelize.json"
    ],
    "startCommand": "node --import=extensionless/register --enable-source-maps ./build/server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "region": "us-east4-eqdc4a",
    "limitOverride": {
      "containers": {
        "cpu": 1,
        "memoryBytes": 1000000000
      }
    }
  }
}
