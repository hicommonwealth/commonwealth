{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "deploy/dockerfiles/caddy/caddy.dockerfile",
    "watchPatterns": ["deploy/dockerfiles/caddy/**", "deploy/caddy.json"]
  },
  "deploy": {
    "restartPolicyType": "ALWAYS",
    "region": "us-east4-eqdc4a",
    "limitOverride": {
      "containers": {
        "cpu": 2,
        "memoryBytes": 2000000000
      }
    },
    "overlapSeconds": 60,
    "drainingSeconds": 30
  },
  "environments": {
    "production": {
      "deploy": {
        "limitOverride": {
          "containers": {
            "cpu": 3,
            "memoryBytes": 3000000000
          }
        }
      }
    }
  }
}
